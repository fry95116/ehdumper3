{
  "name": "ehdumper3",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "nx run-many -t dev",
    "dev:web": "nx run gallerydumper3-web:dev",
    "format": "nx run-many -t format",
    "lint": "nx run-many -t lint",
    "test": "nx run-many -t test",
    "cov": "nx run-many -t cov",
    "clean": "nx run-many -t clean && rm -rf node_modules",
    "i:web": "npm install --prefix packages/gallerydumper3-web",
    "i:server": "npm install --prefix packages/gallerydumper3-server",
    "test2": "NODE_TLS_REJECT_UNAUTHORIZED=0 node scripts/test.js"
  },
  "private": true,
  "devDependencies": {
    "@nx/js": "21.6.4",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "nx": "21.6.4",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "vite-plugin-pwa": "^1.1.0"
  },
  "lint-staged": {
    "packages/gallerydumper3-web/**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "npm --prefix packages/gallerydumper3-web run lint --silent"
    ],
    "packages/gallerydumper3-server/**/*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "npm --prefix packages/gallerydumper3-server run lint --silent"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
